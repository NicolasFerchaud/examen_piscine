{% extends 'base.html.twig' %}

{% block title %}{{ faire_part.name }}{% endblock %}

{% block main %}

    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <img class="resp" src="{{ asset('uploads/image_product/' ~ faire_part.media) }}" alt="{{ faire_part.name }}">
                </div>
                <div class="col-md-4">
                    <h1 class="bordeaux">{{ faire_part.name }}</h1>
                    <div class="detail">{{ faire_part.price }}€</div>
                    <a href="{{ path('contact') }}" class="btn btn-bordeaux">Me contacter</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <h3 class="bordeaux">Description :</h3>
        <p>{{ faire_part.description | nl2br }}</p>{#nl2br = filtre saut de ligne auto, si présent dans le contenu#}
    </div>

{% endblock %}

