{% extends 'base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block main %}
    <div class="container mt-4">
        <h1>Les catégories</h1>
    </div>
    {% for category in categoryList %}
        <ul>
            <li>{{ category.name }}</li>

            {% for child in category.children %}
                {% if child.isPublished %}
                    <ul>
                        <li>{{ child.name }}</li>
                    </ul>
                {% endif %}
            {% endfor %}
        </ul>
    {% endfor %}
{% endblock main %}
