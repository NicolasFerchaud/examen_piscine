{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block main %}
    <div class="jumbotron text-center">
        <h1 class="card-title home">A mon image</h1>
        <h2 class="card-text home">Immortalisez vos souvenirs avec des créations uniques et entièrement personnalisées</h2>
    </div>
    <div class="container mb-4">
        <div id="carouselHomeInterval" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-interval="5000">
                    <img src="{{ asset('Assets/images/qui-je-suis.png') }}" class="d-block w-100" alt="Une description de moi">
                </div>
                <div class="carousel-item" data-interval="5000">
                    <img src="{{ asset('Assets/images/made-in-france.png') }}" class="d-block w-100" alt="Made in France">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselHomeInterval" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselHomeInterval" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="container mt-4">
        <h1 class="mb-4 bordeaux">Dernière création</h1>
        <div class="row flex justify-content-center">
            {% for product in products %}{#boucle pour afficher tous les produits du tableau#}
                <div class="col-sm-12 col-lg-6">
                    <div class="card mb-4">
                        {% if product.media %}
                            <div>
                                <img class="resp" src="{{ asset('uploads/image_product/' ~ product.media) }}" alt="{{ product.name }}">
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h2 class="card-title">
                                <a class="bordeaux" href="{{ path('public/faire_part/show', {'id':product.id}) }}">{{ product.name }}</a>
                            </h2>
                            <div class="bordeaux">{{ product.price }}€</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

